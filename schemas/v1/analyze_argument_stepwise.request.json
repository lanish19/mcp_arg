    "audience": {"type": ["string", "null"]},
    "goal": {"type": ["string", "null"]},
    "max_steps": {"type": ["integer", "null"], "minimum": 0},
    "compat": {"type": ["string", "boolean", "null"]}
  },
  "additionalProperties": true
}

