{
  "$id": "Node",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node",
  "type": "object",
  "required": ["node_id", "node_type", "content", "source_text_span"],
  "properties": {
    "node_id": {"type": "string", "pattern": "^N_[a-f0-9]{8}$"},
    "node_type": {"type": "string", "enum": ["STATEMENT", "CLAIM", "EVIDENCE"]},
    "primary_subtype": {"type": ["string", "null"], "enum": ["Main Claim", "Statement", "Premise", "Assumption", "Evidence", null]},
    "content": {"type": "string", "minLength": 1, "maxLength": 2000},
    "confidence": {"type": ["number", "null"], "minimum": 0, "maximum": 1},
    "source_text_span": {
      "type": "array",
      "items": {"type": "integer", "minimum": 0},
      "minItems": 2,
      "maxItems": 2
    },
    "assumptions": {"type": "array", "items": {"type": "string"}}
  }
}

